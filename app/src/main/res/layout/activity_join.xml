<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        android:textStyle="bold"
        />

    <EditText
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:hint="이름"
        android:background="#ffffff"
        android:id="@+id/j_name"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        android:paddingStart="20dp"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.25"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/j_id"

        />

    <EditText
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:hint="ID"
        android:background="#ffffff"
        android:id="@+id/j_id"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        android:paddingStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/j_name"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@id/j_pw"

        />

    <EditText
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:hint="Password"
        android:background="#ffffff"
        android:id="@+id/j_pw"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        android:paddingStart="20dp"
        app:layout_constraintTop_toBottomOf="@+id/j_id"
        android:layout_marginTop="20dp"
        app:layout_constraintBottom_toTopOf="@+id/asd"
        android:inputType="textPassword"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:id="@+id/asd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/j_pw"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"

        >


        <Button
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="완료"
            android:id="@+id/j_ac"
            android:background="@android:color/holo_blue_light"

            />

        <Button
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="취소"
            android:id="@+id/j_cc"
            android:background="@android:color/darker_gray"
            android:layout_marginStart="20dp"
            />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>