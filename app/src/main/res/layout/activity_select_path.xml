<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#FFFFFF"
        android:text="경로 추천"
        android:textSize="20sp"
        android:textStyle="normal"
        android:fontFamily="@font/scdream5"
        android:textColor="#191919"
        android:paddingTop="15dp"
        android:gravity="center"
        android:elevation="10dp"
        />

    <RelativeLayout
        android:id="@+id/rl_tmap"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#6c6c6c" />

            <RadioGroup
                android:id="@+id/rg_path"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">

                <RadioButton
                    android:id="@+id/rb_car"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="40dp"
                    android:layoutDirection="rtl"
                    android:text="자동차"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:fontFamily="@font/scdream5"
                    android:textColor="#505050"
                    android:drawableLeft="@drawable/car_icon"
                    android:drawablePadding="10dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#afafaf"
                    android:layout_marginTop="5dp"/>

                <RadioButton
                    android:id="@+id/rb_bus"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="40dp"
                    android:layoutDirection="rtl"
                    android:text="버스"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:fontFamily="@font/scdream5"
                    android:textColor="#505050"
                    android:drawableLeft="@drawable/bus_icon"
                    android:drawablePadding="10dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#afafaf"
                    android:layout_marginTop="5dp"/>

                <RadioButton
                    android:id="@+id/rb_subway"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="40dp"
                    android:layoutDirection="rtl"
                    android:text="지하철"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:fontFamily="@font/scdream5"
                    android:textColor="#505050"
                    android:drawableLeft="@drawable/subway_icon"
                    android:drawablePadding="10dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#afafaf"
                    android:layout_marginTop="5dp"/>

                <RadioButton
                    android:id="@+id/rb_walk"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="40dp"
                    android:layoutDirection="rtl"
                    android:text="도보"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:fontFamily="@font/scdream5"
                    android:textColor="#505050"
                    android:drawableLeft="@drawable/dobo_icon"
                    android:drawablePadding="10dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#afafaf"
                    android:layout_marginTop="5dp"/>

                <RadioButton
                    android:id="@+id/rb_etc"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="40dp"
                    android:layoutDirection="rtl"
                    android:text="기타"
                    android:textSize="20sp"
                    android:textStyle="normal"
                    android:textColor="#505050"
                    android:drawableLeft="@drawable/question_icon"
                    android:drawablePadding="10dp"/>

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_cc"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="취소"
                    android:fontFamily="@font/scdream5"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    android:background="#afafaf" />

                <Button
                    android:id="@+id/btn_ac"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="#f7961e"
                    android:text="완료"
                    android:fontFamily="@font/scdream5"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:textColor="#FFFFFF"
                    />



            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>