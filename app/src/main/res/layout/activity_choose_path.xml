<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="경로 추천"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        android:layout_gravity="center_horizontal"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/rl_walk"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="도보"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginStart="40dp"
            android:layout_centerVertical="true"
            />

        <CheckBox
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/cb_walk"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#6c6c6c"
        android:layout_marginTop="5dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/rl_bus"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="버스"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginStart="40dp"
            android:layout_centerVertical="true"
            />

        <CheckBox
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/cb_bus"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#6c6c6c"
        android:layout_marginTop="5dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/rl_subway"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="지하철"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginStart="40dp"
            android:layout_centerVertical="true"
            />

        <CheckBox
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/cb_subway"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#6c6c6c"
        android:layout_marginTop="5dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/rl_car"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="자동차"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginStart="40dp"
            android:layout_centerVertical="true"
            />

        <CheckBox
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/cb_car"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#6c6c6c"
        android:layout_marginTop="5dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/rl_etc"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="기타"
            android:textSize="30sp"
            android:textStyle="bold"
            android:layout_marginStart="40dp"
            android:layout_centerVertical="true"
            />

        <CheckBox
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/cb_etc"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#6c6c6c"
        android:layout_marginTop="5dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            >

            <Button
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="완료"
                android:id="@+id/j_ac"
                android:background="@android:color/holo_blue_light"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="취소"
                android:id="@+id/j_cc"
                android:background="@android:color/darker_gray"
                />

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>